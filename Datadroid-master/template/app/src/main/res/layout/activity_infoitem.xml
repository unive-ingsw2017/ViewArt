<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_above="@+id/autore"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/loader" />

    <TextView
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image"
        android:minLines="2"
        android:paddingTop="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/autore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bene_culturale"
        android:layout_alignParentEnd="true"
        android:minLines="2"
        android:paddingTop="5dp" />


    <TextView
        android:id="@+id/bene_culturale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/soggetto"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/soggetto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/localizzazione"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/localizzazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/datazione"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/datazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/materia_tecnica"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/materia_tecnica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/misure"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/misure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/definizione"
        android:layout_alignParentStart="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/definizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/denominazione"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/denominazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/classificazione"
        android:layout_alignParentStart="true"
        android:minLines="2"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/classificazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:paddingTop="5dp" />
</RelativeLayout>